<resources>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <!-- Custom no action bar theme. -->
    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorBackground</item>
    </style>

    <!-- Custom rating bar theme. -->
    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorSmallRatingBar</item>
    </style>

    <!-- white Vertical view line. -->
    <style name="MidLineVerticalWhite">
        <item name="android:layout_width">@dimen/dim_one</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Vertical view line. -->
    <style name="MidLineVertical">
        <item name="android:layout_width">@dimen/dim_two</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>

    <!-- Horizontal view line. -->
    <style name="MidLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_padding_size</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Horizontal thin view line. -->
    <style name="MidThinLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_one</item>
        <item name="android:background">@color/horizontalBackground</item>
    </style>

    <!-- Horizontal gradation view line. -->
    <style name="MidThinGradationLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_one</item>
        <item name="android:background">@drawable/gradation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
    </style>

</resources>
